<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddTask">

    <TextView
        android:id="@+id/AddTaskHeding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:text="Add Task"
        android:textColor="@color/blue"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/saveButton"
        android:layout_width="55dp"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/AddTaskHeding"
        android:layout_alignParentEnd="true"
        android:src="@drawable/check1" />

    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/AddTaskHeding"
        android:layout_marginTop="16dp"
        android:background="@drawable/blue_border"
        android:backgroundTint="#A9EAAC"
        android:fontFamily="@font/poppins"
        android:hint="Enter the Task"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/blue"
        android:textColorHint="@color/blue"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/contentEditText"
        android:layout_width="384dp"
        android:layout_height="117dp"
        android:layout_below="@id/titleEditText"
        android:layout_marginTop="13dp"
        android:background="@drawable/blue_border"
        android:backgroundTint="#C9CFF3"
        android:fontFamily="@font/poppins"
        android:gravity="top"
        android:hint="Description"
        android:padding="12dp"
        android:textColor="@color/blue"
        android:textColorHint="@color/blue"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/deadlineEditText"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/contentEditText"
        android:layout_marginTop="16dp"
        android:background="@drawable/blue_border"
        android:backgroundTint="#EC9292"
        android:fontFamily="@font/poppins"
        android:hint="Priority"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/blue"
        android:textColorHint="@color/blue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deadlineEditText"
        android:layout_marginTop="23dp"
        android:backgroundTint="#DF9178"
        android:text="dd/mm/yyyy"
        android:textColor="@color/blue"
        android:textSize="28sp"
        tools:text="@tools:sample/date/ddmmyy" />

    <Button
        android:id="@+id/btn_timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_textTime"
        android:layout_marginTop="-1dp"
        android:text="Change Date" />

</RelativeLayout>